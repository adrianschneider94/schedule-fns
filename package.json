{
  "name": "schedule-fns",
  "version": "0.0.1",
  "keywords": [
    "schedules",
    "work shift",
    "calendar",
    "date",
    "holidays",
    "typescript"
  ],
  "author": "Adrian Schneider",
  "license": "MIT",
  "description": "Schedule-fns provides a set of functions to work with schedules (e.g. work shifts).",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianschneider94/schedule-fns.git"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "browserify": "npm run build && browserify --standalone scheduleFns ./lib/src/index.js > ./lib/schedule-fns.min.js",
    "test": "jest",
    "generateReadme": "node generateReadme.js && git add README.md"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "date-holidays": "^1.6.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "browserify": "^17.0.0",
    "jest": "^26.4.2",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "pre-commit": [
    "test",
    "generateReadme"
  ]
}
